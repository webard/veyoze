{
    "name": "webard/veyoze",
    "description": "A CLI tool to Quickly create On-Demand preview environment for your apps.",
    "keywords": ["php", "laravel zero", "console", "cli", "continuous-integration", "ci", "laravel forge", "provision", "staging", "preview", "pull-requests"],
    "homepage": "https://veyoze.com",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/mehrancodes/veyoze/issues",
        "source": "https://github.com/mehrancodes/veyoze"
    },
    "authors": [
        {
            "name": "Mehran Rasulian",
            "email": "mehran.rasulian@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/log": "^10.0",
        "illuminate/validation": "^10.24",
        "laravel-zero/framework": "^10.0.2",
        "laravel/forge-sdk": "^3.13",
        "lorisleiva/laravel-actions": "^2.7",
        "nunomaduro/termwind": "^1.15"
    },
    "require-dev": {
        "laravel/pint": "^1.8",
        "mockery/mockery": "^1.5.1",
        "pestphp/pest": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["veyoze"]
}
